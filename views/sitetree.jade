#sitetree
	ul
		- each p in pages
			li 
				if p.url == page.url
					a(href="/admin/page/"+p._id.toHexString(), class="current", rel=p._id.toHexString())!= p.title
				else
					a(href="/admin/page/"+p._id.toHexString(), rel=p._id.toHexString())!= p.title
				
	a(href='/admin/page/new') create new page
	br
	a(href='/') show site